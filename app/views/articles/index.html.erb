<div class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
  <h2 class="nav-item"><%= link_to "Wikinimous", articles_path %></h2>
  <p class="nav-item"><%= link_to "", new_article_path,
  class: "fas fa-plus" %></p>
</div>
<div class="list-group">
  <h1 class="text-center">Articles</h1>
  <% @articles.each do |article| %>
    <div class="list-group-item">
      <h3><%= link_to article.title, article_path(article.id) %></h3>
      <p><%= article.content %></p>
    </div>
  <% end %>
</div>
